<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Application title - DO NOT TRANSLATE -->
    <string name="app_name">
        <xliff:g>DashClock Birthday Erweiterung</xliff:g>
    </string>

    <!-- Displayed in DashClock Settings -->
    <string name="extension_title">
        Geburtstag
    </string>
    <string name="extension_description">
        Am Geburtstag eines Kontakts Erinnerung einblenden
    </string>

    <!-- Contact information -->
    <string name="single_birthday_title_format">
        Geburtstag von <xliff:g id="contact_name">%1$s</xliff:g>
    </string>
    <!-- Age of the contact -->
    <plurals name="age_format">
        <item quantity="one">
            <xliff:g id="contact_age">%1$s</xliff:g> Jahr alt
        </item>
        <item quantity="other">
            <xliff:g id="contact_age">%1$s</xliff:g> Jahre alt
        </item>
    </plurals>

    <!-- When is the contact birthday ? -->
    <string name="when_days_format">
        in <xliff:g id="how_many_days_until_birthday">%1$d</xliff:g> Tagen
    </string>
    <!-- Special case when the birthday is today -->
    <string name="when_today_format">
        Heute!
    </string>
    <!-- Special case when the birthday is tomorrow -->
    <string name="when_tomorrow_format">
        Morgen
    </string>

    <!-- General settings title -->
    <string name="settings_title">
        <xliff:g>DashClock Birthday</xliff:g> Einstellungen
    </string>

    <!-- Set the number of days we look for future birthday -->
    <string name="pref_days_limit_title">
        Anzahl Tage
    </string>
    <!-- Today only -->
    <string name="pref_days_limit_0_summary_format">
        Erinnerung am Geburtstag einblenden
    </string>
    <plurals name="pref_days_limit_summary_format">
        <item quantity="one">
            Geburtstage von morgen anzeigen
        </item>
        <item quantity="other">
            Geburtstage der folgenden <xliff:g id="days_limit">%1$d</xliff:g> Tage anzeigen
        </item>
    </plurals>

    <!-- Switch (ON/OFF): what happens when the user click on the extension -->
    <string name="pref_show_quickcontact">
        <xliff:g>QuickContact</xliff:g>
    </string>
    <!-- QuickContact enabled description -->
    <string name="pref_show_quickcontact_on">
        Beim Antippen <xliff:g>QuickContact</xliff:g>-Icon zeigen
    </string>
    <!-- QuickContact disabled description -->
    <string name="pref_show_quickcontact_off">
        Beim Antippen Kontakt-App Ã¶ffnen
    </string>
</resources>
